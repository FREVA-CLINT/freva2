{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "jsx": "react",
    "types": ["node", "react", "react-dom"],
    "noLib": false,
    "lib": ["es2015", "es2017", "dom"]
  },
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.d.ts"]
}
